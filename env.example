# ===========================================
# Production Environment Variables
# Copy this file to .env and fill in the values
# ===========================================

# Domain Configuration
DOMAIN=m-dowaid.pro
API_DOMAIN=api.m-dowaid.pro

# ===========================================
# MongoDB Atlas (External)
# ===========================================
# Get your connection string from MongoDB Atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/product-catalog?retryWrites=true&w=majority

# ===========================================
# JWT Authentication
# ===========================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_here_change_me
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ===========================================
# AWS S3 Configuration
# ===========================================
AWS_REGION=me-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET=your_s3_bucket_name

# ===========================================
# Email Configuration (for SSL certificate)
# ===========================================
CERTBOT_EMAIL=your_email@example.com

# ===========================================
# Optional: Redis Password (if needed)
# ===========================================
# REDIS_PASSWORD=your_redis_password

